
@model EF.Domain.Locacao
@{
    ViewData["Title"] = "Cadastar Locação";
}

<div class="row">
    <div>
        <h1 class="text-center">Cadastar Locação</h1>
    </div>

    <div class="col-md-8 col-md-offset-2">

        @using (Html.BeginForm("Add", "Locacao", FormMethod.Post))
        {
            @Html.TextBoxFor(b => b.Id, new { @class = "form-control", placeholder = "Informe o nome do genero.", @type = "hidden" })
            <div class="form-group">
                <label>CFP</label>
                @Html.TextBoxFor(b => b.CPF, new { @class = "form-control", placeholder = "Informe o genero do filme.", @type = "number" })
            </div>
            
            @if ((ViewBag.Message as string).Length > 0 || ViewBag.AlertColor != null)
            {
                <div class="alert @ViewBag.AlertColor" role="alert">
                    @ViewBag.Message
                </div>

            }
            
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Cadastrar</button>
            </div>
            <div class="col-md-6">
                @Html.ActionLink("Voltar", "Index", "Filmes", "", new { @class = "btn btn-default btn-lg btn-block" })
            </div>

        }
    </div>
</div>
